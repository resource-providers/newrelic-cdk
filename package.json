{
  "name": "",
  "version": "0.0.1",
  "keywords": [],
  "description": "",
  "main": "lib/index.js",
  "author": "Joe Snell <joepsnell@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc -w",
    "build": "jsii",
    "lint": "eslint . --ext .ts",
    "test": "yarn lint && jest",
    "package": "jsii-pacmak"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "jest": "^26.0.1",
    "jsii": "^1.6.0",
    "jsii-pacmak": "^1.6.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "repository": {
    "url": "https://github.com/wulfmann/newrelic-cdk",
    "type": "git"
  },
  "jsii": {
    "outdir": "dist",
    "versionFormat": "short",
    "targets": {
      "java": {
        "package": "org.newrelic-cdk",
        "maven": {
          "groupId": "org.newrelic-cdk",
          "artifactId": "newrelic-cdk"
        }
      },
      "python": {
        "distName": "newrelic-cdk",
        "module": "newrelic_cdk"
      },
      "dotnet": {
        "namespace": "Org.NewrelicCdk",
        "packageId": "Org.NewrelicCdk"
      }
    }
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  }
}
